# Database
# PostgreSQL connection string (required)
DATABASE_URL="postgresql://user:password@localhost:5432/petconnect?schema=public"

# Authentication
# Generate with: openssl rand -hex 32
AUTH_SECRET=""

# Site Configuration
# Your site URL (use http://localhost:3000 for local development)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Payment Processing
# Payment processor secret key (server-side)
PAYMENT_SECRET_KEY=""
# Payment processor public key (client-side)
PAYMENT_PUBLIC_KEY=""
# Payment processor base URL (if using custom provider)
PAYMENT_PROVIDER_BASE_URL=""
# Webhook secret from your payment processor
PAYMENT_WEBHOOK_SECRET=""

# Legacy Payment Variables (if using old payment.ts)
# NEXT_PUBLIC_PAYMENT_PUBLISHABLE_KEY=""

# Email (Resend)
# Resend API key (for contact forms and emails)
RESEND_API_KEY=""
# Email address to receive contact form submissions
CONTACT_TO_EMAIL=""
# Verified sender email for Resend
CONTACT_FROM_EMAIL=""

# Upstash Redis (for rate limiting)
# Get from https://upstash.com
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Vercel Blob (for file uploads - optional)
# Get from Vercel dashboard
BLOB_READ_WRITE_TOKEN=""

# Node Environment
# Automatically set by Next.js, but you can override
# NODE_ENV="development"
